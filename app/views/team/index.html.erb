<h1>Players</h1>

<%= form_with(url: players_path, method: "get") do |form| %>
  <div>
    <%= form.label :team_name, "Team Name:" %>
    <%= form.select :team_name, options_for_select(Team.pluck(:name, :name)) %>
  </div>

  <div>
    <%= form.label :player_name, "Player Name:" %>
    <%= form.text_field :player_name %>
  </div>

  <div>
    <%= form.label :age_from, "Age From:" %>
    <%= form.number_field :age_from %>
  </div>

  <div>
    <%= form.label :age_to, "Age To:" %>
    <%= form.number_field :age_to %>
  </div>

  <div>
    <%= form.submit "Search", class: "btn btn-primary" %>
    <%= link_to "Reset Filters", players_path, class: "btn btn-secondary" %>
  </div>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Position</th>
      <th>Team</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.age %></td>
        <td><%= player.position %></td>
        <td><%= player.team.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>