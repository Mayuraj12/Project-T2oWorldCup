<div class="container mt-4">
  <h1 class="mb-4">Teams</h1>
  
  <%= link_to 'New Team', new_team_path, class: 'btn btn-success mb-3' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>Founded</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.country %></td>
          <td><%= team.founded %></td>
          <td><%= team.description %></td>
          <td>
            <%= link_to 'Show', team_path(team), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_team_path(team), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Destroy', team_path(team), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>