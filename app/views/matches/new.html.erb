<div class="container mt-4">
  <h1>New Team</h1>

  <%= form_with(model: @team, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :country, class: 'form-label' %>
      <%= form.text_field :country, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :founded, class: 'form-label' %>
      <%= form.number_field :founded, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <%= form.submit 'Create Team', class: 'btn btn-primary' %>
    <%= link_to 'Back', teams_path, class: 'btn btn-secondary' %>
  <% end %>
</div>